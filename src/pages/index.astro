---
import SimpleNavigation from "../components/SimpleNavigation.astro/SimpleNavigation.astro";
import Hero from "../components/Hero/Hero.astro";
import MenuList from "../components/MenuList/MenuList.astro";
import CupcakeMenu from "../components/CupcakeMenu/CupcakeMenu.astro";
import SBSReverse from "../components/SBSReverse/SBSReverse.astro";
import Contact from "../components/Contact/Contact.astro";
import Footer from "../components/Footer/Footer.astro";
import "../styles/root.less";
import Logo from '../assets/images/bakerylogo.svg';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta
			name="description"
			content="Ma Cherie Patisserie Bakery - Indulge in exquisite pastries and treats in Binh Tan District, Ho Chi Minh City, Vietnam"
		/>
		<meta
			name="keywords"
			content="Ma Cherie Patisserie, bakery, pastries, desserts, cakes, treats, Binh Tan District, Ho Chi Minh City, Vietnam"
		/>
		<meta name="robots" content="index, follow" />
		<meta name="language" content="English" />

		<!-- Open Graph meta tags for better social media sharing -->
		<meta property="og:title" content="Ma Cherie Patisserie Bakery" />
		<meta
			property="og:description"
			content="Indulge in exquisite pastries and treats from Ma Cherie Patisserie Bakery in Binh Tan District, Ho Chi Minh City, Vietnam"
		/>
		<meta
			property="og:image"
			content="../assets/images/bakerylogo.svg"
		/>
		<!-- Use a compelling image URL for sharing -->
		<meta property="og:url" content="https://www.macheriepatisserie.com" />
		<!-- Replace with your website URL -->
		<meta property="og:type" content="website" />
		<link rel="icon" type="image/png" href="../assets/images/bakerylogo.svg"/>
		<title>Astro</title>
	</head>
	<body>
		<SimpleNavigation />
		<Hero />
		<SBSReverse />
		<MenuList />
		<CupcakeMenu />
		<Contact />
		<Footer />
	</body>
</html>
